---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';
import { findImage } from '~/utils/images';
import { fetchContact } from '~/utils/page';

const metadata = {
  title: 'Contacto',
};

const contactData = await fetchContact();
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <Hero
    title={contactData.title}
    image={{ src: findImage(contactData.image), alt: 'ermita' }}
    subtitle={contactData.subtitle}
    tagline={contactData.tagline}
  />

  <div class="relative w-full h-96">
    <iframe
      class="absolute top-0 left-0 w-full h-full"
      src={contactData.map}
      frameborder="0"
      style="border:0;"
      allowfullscreen=""
      aria-hidden="false"
      tabindex="0"
    >
    </iframe>
  </div>

  <ContactUs
    title={contactData.titleform}
    subtitle={contactData.subtitleform}
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Correo electrónico',
      },
      {
        type: 'tel',
        name: 'phone',
        label: 'Teléfono',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    description={contactData.disclaimer}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Información de contacto"
    items={[
      {
        title: 'Teléfono',
        description: contactData.phone,
        icon: 'tabler:headset',
      },
      {
        title: 'Correo electrónico',
        description: contactData.email,
        icon: 'tabler:mail',
      },
      {
        title: 'Dirección',
        description: contactData.address,
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>

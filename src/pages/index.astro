---
import Layout from '~/layouts/PageLayout.astro';

import Note from '~/components/widgets/Note.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import { fetchHome } from '~/utils/page';

const metadata = {
  title: 'Inicio | Hermandad de San Isidro Labrador',
  ignoreTitleTemplate: true,
};

const homeData = await fetchHome()
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <div class="w-full bg-cover bg-top" style="height:32rem; background-image: url(/images/hero.jpg);"/>

  <!-- Note Widget ******************* -->

  <Note note={homeData.announce} />

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Actualidad"
    information='Noticias y eventos de la Hermandad'
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title={homeData.titlefaqs}
    subtitle={homeData.subtitlefaqs}
    tagline={homeData.taglinefaqs}
    classes={{ container: 'max-w-6xl'}}
    items={homeData.faqs}
  />

  
</Layout>
